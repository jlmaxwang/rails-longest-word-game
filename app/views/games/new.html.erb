<div class="container">
<h1>NEW GAME</h1>
<P>LETTERS GRID</P>
<div class="letters">
<ul>
<%@letters.each do |letter| %>
<li><%= letter %></li>
<% end %>
</ul>
</div>
<div class="form">
<p>What is the longest word you can find?</p>
<form action="/score" method = "POST" class = "form-inline">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :letters, @letters %>
<input type="text" name="word" class="form-control" value="<%= params[:letters] %>">
<input type="submit" value="YOUR WORD!" class="btn btn-primary">
</form>
</div>
</div>
